package sortAlgorithms;

public class BubbleSort {
	
	public int[] sort(int[] v){
	  for (int i=0; i<v.length; i++) {
	    for (int j=0; j<v.length-1; j++) {
	      //Comparação
	      if (v[j] > v[j+1]) {
	    	//Troca
	        int aux = v[j];
	        v[j] = v[j+1];
	        v[j+1] = aux;
	      }
	    }
	  }
	
	  return v;
	}
}
