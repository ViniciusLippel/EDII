package sortAlgorithms;

public class SelectionSort {
	
	public int[] sort(int[] v) {
		for (int i=0; i<v.length-1; i++) {
			int min = i;
			for (int j=i+1; j<v.length; j++) {
				//Comparação
				if (v[j] < v[min])
					min = j;
			}
			//Troca
			int aux = v[i];
			v[i] = v[min];
			v[min] = aux;
		}
		return v;
	}
}
